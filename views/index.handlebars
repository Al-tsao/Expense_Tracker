<div class="container">

  {{!-- 類別 --}}
  <div class="row mt-3">
    <div class="dropdown mt-2 col-6 offset-3">
      <button class="btn btn-outline-secondary btn-block btn-lg dropdown-toggle text-left" type="button"
        style="font-size: 1.5rem;" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
        aria-expanded="false">
        <strong>類別</strong>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="font-size: 1.5rem; width: 95%;">
        <a class="dropdown-item" href="/sort/家居物業">家居物業</a>
        <a class="dropdown-item" href="/sort/交通出行">交通出行</a>
        <a class="dropdown-item" href="/sort/休閒娛樂">休閒娛樂</a>
        <a class="dropdown-item" href="/sort/餐飲食品">餐飲食品</a>
        <a class="dropdown-item" href="/sort/其他">其他</a>
      </div>
    </div>
  </div>

  {{!-- 總金額 --}}
  <div class="row justify-content-md-start mt-3">
    <div class="col-5 offset-3">
      <h4><strong>支出總金額:</strong></h4>
    </div>
  </div>

  {{!-- 總金額數字 --}}
  <div class="row justify-content-md-start">
    <div class="col-5 offset-4">
      <h1 style="font-size: 7rem; text-align: right; color:rgba(220, 53, 69, 0.9)">{{total}}</h1>
    </div>
  </div>

  {{!-- 購買細項 --}}
  {{#each list}}
  <div class="row justify-content-md-start mb-2">
    <div class="col-6 offset-3">
      <ul class="list-group">
        <li class="list-group-item">
          <div class="row">
            <div class="col-auto mr-auto">
              <div style="font-size: 2rem;">
                <strong>{{{this.icon}}} {{this.name}}</strong>
              </div>
              <div style="font-size: 1rem;">
                <strong>{{this.date}}</strong>
              </div>
            </div>
            <div class="col-auto" style="font-size: 3rem;">
              <strong>{{this.amount}}</strong>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="col-auto">
      <div>
        <a class=" btn btn-outline-info" style="font-size: 1.25rem;" href="/update/{{ this._id }}">修改</a>
      </div>

      <form action="/delete/{{ this._id }}" method="GET" onsubmit="return deleteAlert()">
        <button type="submit" class="btn btn btn-outline-danger mt-2" style="font-size: 1.25rem;">
          刪除
        </button>
      </form>

    </div>
  </div>
  {{/each}}
  {{!-- 新增之出按鍵 --}}
  <div class="row justify-content-md-center mt-5">
    <div>
      <a class="btn btn btn-info" style="font-size: 2rem;" href="/create"><strong>新增支出</strong></a>
    </div>
  </div>

</div>